<style>
    /* General Reset */
body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    background-color: #f4f4f9;
    color: #333;
}

/* Skills Section */
.skills-area {
    padding: 50px 20px;
    background-color: #ffffff;
    text-align: center;
}

.skills-wrapper {
    max-width: 1200px;
    margin: 0 auto;
}

.skills-title {
    font-size: 2.5rem;
    color: #222;
    margin-bottom: 10px;
}

.skills-description {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 40px;
}

.skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
    justify-items: center;
}

.skill-item {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
}

.skill-item:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
}

.skill-icon {
    width: 80px;
    height: auto;
    margin-bottom: 10px;
}

.skill-name {
    font-size: 1.1rem;
    color: #333;
    margin: 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .skills-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 480px) {
    .skills-grid {
        grid-template-columns: 1fr;
    }
}

</style>


